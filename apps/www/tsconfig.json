{
    "extends": "ts-config/nextjs.json",
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules", ".next"],
    "compilerOptions": {
        "target": "ESNext",
        "types": ["web"],
        "paths": {
            "~/*": ["./src/*"],
            "@ui/*": ["./src/components/ui/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@contexts/*": ["./src/contexts/*"]
        },
        "strictNullChecks": true
    }
}
